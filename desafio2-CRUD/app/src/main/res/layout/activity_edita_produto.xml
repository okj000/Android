<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="0dp" android:background="#045FB4"
    >

    <ImageView
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_gravity="center"
        android:id="@+id/imageView" />

    <Button
        android:id="@+id/button"
        android:text="Carregar imagem"
        android:onClick="tirarFoto"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="#dcdada"
        android:textColor="#000"
        />

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:focusable="true"
        android:focusableInTouchMode="true" >

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:paddingRight="8dp"
            android:layout_weight="1" >

            <TextView
                android:id="@+id/tvEditaNomeP"
                android:text="Nome do produto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="10dp"
                android:textAlignment="center"
                android:background="#dcdada"
                android:layout_marginLeft="8dp"/>

            <EditText
                android:id="@+id/campoEditaNomeP"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="#fff"
                android:layout_marginBottom="10dp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:layout_marginLeft="8dp"
                />
        </LinearLayout>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_weight="1" >

            <TextView
                android:id="@+id/tvEditaValorP"
                android:text="Valor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="10dp"
                android:textAlignment="center"
                android:background="#dcdada"
                android:layout_marginRight="8dp"/>

            <EditText
                android:id="@+id/campoEditaValorP"
                android:inputType="numberDecimal"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="#fff"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:layout_marginRight="8dp"/>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:focusable="true"
        android:focusableInTouchMode="true" >

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:paddingRight="8dp"
            android:layout_weight="1" >

            <TextView
                android:id="@+id/tvEditaDescricaoP"
                android:text="Descrição"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="10dp"
                android:textAlignment="center"
                android:background="#dcdada"
                android:layout_marginLeft="8dp"/>

            <EditText
                android:id="@+id/campoEditaDescricaoP"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="#fff"
                android:layout_marginBottom="10dp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:layout_marginLeft="8dp"/>

        </LinearLayout>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_weight="1" >

            <TextView
                android:id="@+id/tvEditaFabricanteP"
                android:text="Fabricante"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="10dp"
                android:textAlignment="center"
                android:background="#dcdada"
                android:layout_marginRight="8dp"
                />

            <EditText
                android:id="@+id/campoEditaFabricanteP"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="#fff"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:layout_marginRight="8dp"/>
        </LinearLayout>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:focusable="true"
            android:focusableInTouchMode="true" >

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_weight="1" >

            <TextView
                android:id="@+id/tvCategoriaP"
                android:text="Categoria: "
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="22dp"
                android:textAlignment="center"
                android:background="#dcdada"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                />
        </LinearLayout>

     </LinearLayout>

    </LinearLayout>



    <Button
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Savar Alterações"
        android:id="@+id/btnSalvAlteracoes"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="btnSalvarAltercoes"
        android:layout_marginBottom="10dp"
        android:background="#323134"
        android:textColor="#FFF"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        />

</LinearLayout>
